<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.momoka.dianping.dao.AdDao">
	<insert id="insert">
		insert into ad(title,img_file_name,link,weight)
		 values(#{title},#{imgFileName},#{link},#{weight})
	</insert>
	
	<select id="selectByPage" resultType="Ad">
		select id,title,img_file_name as imgFileName,link,weight from ad
		<where>
			<if test="title != null and title != ''">
				title like '%' #{title} '%'
			</if>
		</where>
		order by weight desc,id
	</select>
	
</mapper>